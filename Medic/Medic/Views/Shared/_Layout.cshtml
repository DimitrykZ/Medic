<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
                <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Организации", "OrganizationView", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                    <li>@Html.ActionLink("Добавать организацию", "OrganizationAdd", "Home")</li>
                    }
                    @if (User.Identity.IsAuthenticated && Roles.GetRolesForUser().First().Equals("Manager"))
                    {
                    <li>@Html.ActionLink("Добавить пользователя", "CreateUser", "Account")</li>
                    <li>@Html.ActionLink("Просмотр пользователей", "ViewUser", "Account")</li>
                    }
                    @if (!User.Identity.IsAuthenticated)
                    {
                    <li>@Html.ActionLink("Авторизация", "Login", "Account")</li>
                    }
                    else
                    {
                    <li>@Html.ActionLink("Выход", "Exit", "Account")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – приложение ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
